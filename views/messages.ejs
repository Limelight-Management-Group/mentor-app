<form method="post" action="/socket-chat">
  <div class="form-group">
    <label for="chatbox">Message Title</label>
    <input name="title" type="text" class="form-control" id="title" placeholder="What's up, Doc?">
  </div>
  <div class="form-group">
    <label for="chatbox">Message</label>
    <input name="message" type="text-area" class="form-control" id="message" placeholder="Please, enter a message.">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>